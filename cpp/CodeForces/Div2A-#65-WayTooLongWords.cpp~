#include <iostream>
#include <iostream>
#include <bits/stdc++.h>
#include <string>
#include <numeric>
#include <vector>
#include <cmath>
using namespace std;

int main(){
   int n; cin >> n;

   string arr[n]  ;
for(int x=0; x<n; x++){
    string s; cin >> s;
    arr[x] = s;
   }

   for(int x=0; x<n; x++){
    string bruh = arr[x];
    if(bruh.length()>10){
    cout << bruh[0] << bruh.length()-2 << bruh[bruh.length()-1] << endl;
}else{
    cout << bruh << endl;
   }
}


}
