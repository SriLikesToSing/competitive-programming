#include <iostream>
#include <bits/stdc++.h>
using namespace std;

	

int main() {
  int n;
  cin >> n;
  for(int x=0;x<n; x++) {
    int max = 0;
    int sumFirst = 0;
    int sumSecond = 0;
    int i1, i2, i3;
    cin >> i1>> i2 >> i3 ;
    int first[] = {i1, i2, i3};
	
    //first set of operations
    while(first[1]>=1 &&  first[2]>=2 ){
      first[1]--;
      first[2]-=2;
      sumFirst+= 3;
    }

    while(first[0] >=1 && first[1]>=2){
      first[0]--;
      first[1]-=2;
      sumSecond+= 3;
    }

	}






cout << sumFirst + sumSecond << endl;
}

 







